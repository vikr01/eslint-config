{
    "extends": "@tsconfig/recommended",
  
    "compilerOptions": {
        "noEmit": true,
        "rootDir": ".",
        "baseUrl": ".",

        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ESNext",

        "strict": true,

        "jsx": "react-jsx",

        "paths": {
            "@vikr01/eslint-config": ["./packages/eslint-config/src"],
            "@vikr01/eslint-config/*": ["./packages/eslint-config/src/*"],
        },
    },
  
    "exclude": [
        "node_modules",
        "dist",
        "packages/*/dist",
    ],
}
